# API Configuration
API_BASE_URL=http://localhost:8000/api
API_TIMEOUT=30000

# Authentication
AUTH_TOKEN_KEY=auth_token
REFRESH_TOKEN_KEY=refresh_token
TOKEN_EXPIRY_KEY=token_expiry

# Environment
NODE_ENV=development
DEBUG=true

# Feature Flags
ENABLE_ANALYTICS=false
ENABLE_LOGGING=true

# API Keys (replace with actual values in .env file)
GOOGLE_MAPS_API_KEY=your_google_maps_api_key
SENTRY_DSN=your_sentry_dsn
ONESIGNAL_APP_ID=your_onesignal_app_id

# App Configuration
APP_NAME=RightImpact
APP_DISPLAY_NAME="RO App"
APP_VERSION=1.0.0
APP_BUILD_NUMBER=1

# Backend Configuration
BACKEND_URL=http://localhost:8000
BACKEND_API_PREFIX=/api/v1

# Pagination
DEFAULT_PAGE_SIZE=10
MAX_PAGE_SIZE=100

# Cache
CACHE_ENABLED=true
CACHE_TTL=3600

# Logging
LOG_LEVEL=debug
LOG_REQUESTS=true
LOG_RESPONSES=true

# Error Tracking
SENTRY_ENABLED=false
SENTRY_DSN=

# Analytics
MIXPANEL_TOKEN=
AMPLITUDE_API_KEY=

# Deep Linking
DEEP_LINKING_SCHEME=RightImpact
DEEP_LINKING_PREFIX=RightImpact://

# iOS Specific
IOS_BUNDLE_ID=com.RightImpact.ios
IOS_APP_STORE_ID=1234567890

# Android Specific
ANDROID_PACKAGE_NAME=com.RightImpact.android
ANDROID_APP_STORE_ID=com.RightImpact

# CodePush
CODEPUSH_IOS_DEPLOYMENT_KEY=
CODEPUSH_ANDROID_DEPLOYMENT_KEY=

# Feature Toggles
FEATURE_REGISTRATION_ENABLED=true
FEATURE_SOCIAL_LOGIN_ENABLED=true
FEATURE_BIOMETRICS_ENABLED=true

# Localization
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,es,fr,de,pt,ru,zh,ja,ko,ar
